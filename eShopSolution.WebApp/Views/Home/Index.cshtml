                                                                                    <span class="ttvproduct-add-to-wishlist-label">Add to Wish List</span>
                                                                                </button>
                                                                            </div>
                                                                        </div>
                                                                    </div>
                                                                    <div class="product-description">
                                                                        <div class="ttvall-product-star-icon">
                                                                            <div class="comments_note">
                                                                                <div class="star_content">
                                                                                    @for (var i = 1; i <= item.Rating; i++)
                                                                                    {
                                                                                        <div class="star star_on"><i class="fa fa-star" aria-hidden="true"></i></div>
                                                                                    }
                                                                                    @for (var i = 1; i <= 5 - item.Rating; i++)
                                                                                    {
                                                                                       <div class="star"><i class="fa fa-star" aria-hidden="true"></i></div>
                                                                                    }                                                                             
                                                                                </div>
                                                                            </div>
                                                                        </div>
                                                                        <div class="ttvproduct-name">
                                                                            <div class="product-title">
                                                                                <a asp-controller="product" asp-action="detail" asp-route-productId="@item.Id" asp-route-categoryId="@item.CategoryId">
                                                                                    <h6>@item.Name</h6>
                                                                                </a>
                                                                            </div>
                                                                        </div>
                                                                        <div class="ttvproduct-name-price-wrapper">
                                                                            <div class="product-price-and-shipping"><span class="price">@item.Price.ToString("C2", CultureInfo.CurrentCulture)</span><span class="price-tax">Ex Tax:$310.00</span></div>
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </article>
                                                    </div>
                                                </div>
                                            }
                                        </div>
                                    </div>
                                    <div class="owl-nav disabled"><button type="button" role="presentation" class="owl-prev"><span aria-label="Previous">‹</span></button><button type="button" role="presentation" class="owl-next"><span aria-label="Next">›</span></button></div>
                                    <div class="owl-dots disabled"></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

