@using eShopSolution.ViewModels.System.Users
@model LoginRequest

<div id="account-login" class="container">
    <div class="row">
        <aside id="column-left" class="col-xl-3 col-lg-3 col-md-3 col-sm-3 col-xs-12">
            @await Component.InvokeAsync("SideBarAccount")
        </aside>
        <div id="content" class="col-sm-9">
            <div id="main">
                <div class="row">
                    <div class="col-sm-6">
                        <div class="well ttv-sub-pages-inner-content">
                            <div class="ttvpage-sub-title-wrapper">
                                <h2 class="ttvpage-sub-title">New Customer</h2>
                            </div><p>
                                <strong>Register</strong>
                            </p>
                            <p>By creating an account you will be able to shop faster, be up to date on an order's status, and keep track of the orders you have previously made.</p>
                            <a asp-controller="account" asp-action="register" class="btn btn-primary ttv-innerpage-button">Continue</a>
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="well ttv-sub-pages-inner-content">
                            <div class="ttvpage-sub-title-wrapper">
                                <h2 class="ttvpage-sub-title">Returning Customer</h2>
                            </div>
                            <p>
                                <strong>I am a returning customer</strong>
                            </p>
                            <form asp-controller="account" asp-action="login" method="post">
                                <div class="form-group">
                                    <label class="control-label ttvpage-sub-label" asp-for="UserName">Username</label>
                                    <input type="text" asp-for="UserName" placeholder="Username" class="form-control">
                                </div>
                                <div class="form-group">
                                    <label class="control-label ttvpage-sub-label" asp-for="Password">Password</label>
                                    <input type="password" asp-for="Password" placeholder="Password" class="form-control">
                                    <a href="#">Forgotten Password</a>
                                </div>
                                <input type="submit" value="Login" class="btn btn-primary ttv-innerpage-button">
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>